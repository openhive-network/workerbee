    "pretest": "playwright install chromium && npm run build:test",
    "test": "unset CI && playwright test --workers 4 --max-failures 1 --project=workerbee_testsuite --project=workerbee_testsuite_mock"
  },
  "size-limit": [
    {
      "path": [
        "./dist/bundle"
      ],
      "limit": "181 kB",
      "brotli": false
    }
