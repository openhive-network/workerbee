{
  "extends": "./npm-common-config/ts-common/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/tests",
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "declaration": false,
    "sourceMap": true
  },
  "include": [
    "./__tests__/**/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "dist"
  ]
}
