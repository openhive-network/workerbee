{
  "extends": "./npm-common-config/ts-common/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./__tests__",
    "baseUrl": ".",
    "outDir": "./dist/tests",
    "paths": {
      "../../src": ["./src/index.ts"],
      "../../src/*": ["./src/*"]
    },
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "declaration": false,
    "sourceMap": true
  },
  "include": [
    "./__tests__/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "dist"
  ]
}
